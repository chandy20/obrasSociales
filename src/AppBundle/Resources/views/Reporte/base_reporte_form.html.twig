                error = true;
                mensaje += " Fecha inicial ";
            }
            if (!fFin) {
                error = true;
                mensaje += " Fecha final ";
            }
        }
        if (error) {
            swal("AtenciÃ³n", "Por favor seleccione " + mensaje, "error");
        } else {
            var form = {};
            try {
                form = $('#formulario_reporte').serializeObject();
            } catch (e) {
                console.log("se muriÃ³");
            }
            form = JSON.stringify(form);
            var url = 'dataReporte';
            $.ajax({
                type: 'post',
                url: url,
                data: {
                    form: form,
                    pestana: pestana
                },
                beforeSend: function (xhr) {
                    document.getElementById("divProceso").style.visibility = "visible";
                },
                success: function (data) {
                    $("#datosConsulta").html("");
                    $("#datosConsulta").html(data.html);
                },
                complete: function (jqXHR, textStatus) {
                    document.getElementById("divProceso").style.visibility = "hidden";
                }
            });
        }
    }

</script>

