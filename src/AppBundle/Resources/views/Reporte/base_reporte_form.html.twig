        $('#datosConsulta').html('');
    }
    function buscarDatos() {
        var pestana = $("#pestanaActiva").val();
        var error = false;
        var mensaje = "";
        if (pestana == 1) {
            var fInicio = $("#formulario_reportes_fechaInicial").val();
            var fFin = $("#formulario_reportes_fechaFinal").val();
            if (!fInicio) {
                error = true;
